<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="90dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/hot_offers_background">

    <ImageView
        android:id="@+id/image_hot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/offer" />

    <TextView
        android:id="@+id/title_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Title"
        android:fontFamily="@font/raleway_semibold"
        android:textColor="@color/black"
        android:textFontWeight="3000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_hot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="@+id/image_hot"
        app:layout_constraintTop_toTopOf="@+id/image_hot"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/description_hot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_marginBottom="4dp"
        android:text="Description"
        android:textColor="@color/black"
        android:fontFamily="@font/raleway_medium"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>